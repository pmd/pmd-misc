/eclipse.3M5/plugins/org.eclipse.ui.editors_3.0.0/editors.jar;../../../../../Program Files/eclipse.3M5/plugins/org.eclipse.core.filebuffers_3.0.0/filebuffers.jar;../../../../../Program Files/eclipse.3M5/plugins/org.apache.xerces_4.0.13/xmlParserAPIs.jar;../../../../../Program Files/eclipse.3M5/plugins/org.apache.xerces_4.0.13/xercesImpl.jar;../../../../../Program Files/eclipse.3M5/plugins/org.eclipse.jdt.core_3.0.0/jdtcore.jar;../../../../../Program Files/eclipse.3M5/plugins/org.eclipse.ant.core_3.0.0/antsupport.jar;../../../../../Program Files/eclipse.3M5/plugins/org.eclipse.core.variables_3.0.0/variables.jar;../../../../../Program Files/eclipse.3M5/plugins/org.eclipse.team.core_3.0.0/team.jar;../pmd-eclipse-pmd/core.jar;../pmd-eclipse-pmd/lib/pmd-1.3.jar;../pmd-eclipse-pmd/lib/jaxen-core-1.0-fcs.jar;../pmd-eclipse-pmd/lib/saxpath-1.0-fcs.jar" source="${javacSource}" target="${javacTarget}"		>
			<src path="src/"			/>
		</javac>
		<!-- copy necessary resources -->
		<copy todir="${temp.folder}/pmd-eclipse.jar.bin">
			<fileset dir="src/" excludes="**/*.java"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar jarfile="${build.result.folder}/pmd-eclipse.jar" basedir="${temp.folder}/pmd-eclipse.jar.bin"/>
		<delete dir="${temp.folder}/pmd-eclipse.jar.bin"/>
	</target>

	<target name="pmd-eclipsesrc.zip" depends="init" unless="pmd-eclipsesrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip zipfile="${build.result.folder}/pmd-eclipsesrc.zip" filesonly="false" whenempty="skip">
			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: net.sourceforge.pmd.eclipse.">
		<available property="pmd-eclipse.jar" file="${build.result.folder}/pmd-eclipse.jar"/>
		<antcall target="pmd-eclipse.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="pmd-eclipsesrc.zip" file="${build.result.folder}/pmd-eclipsesrc.zip"/>
		<antcall target="pmd-eclipsesrc.zip"/>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3"/>
		<copy file="${build.result.folder}/pmd-eclipsesrc.zip" todir="${destination.temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3"/>
		<copy todir="${destination.temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3">
			<fileset dir="${basedir}" includes="build.properties,build.xml,src/"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3"/>
		<copy file="${temp.folder}/pmd-eclipse.jar.bin.log" todir="${destination.temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: net.sourceforge.pmd.eclipse of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/pmd-eclipse.jar"/>
		<delete file="${build.result.folder}/pmd-eclipsesrc.zip"/>
		<delete file="${plugin.destination}/net.sourceforge.pmd.eclipse_2.0.2.v3.jar"/>
		<delete file="${plugin.destination}/net.sourceforge.pmd.eclipse_2.0.2.v3.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="c:/home/phherlin/javadev/PMD_3/pmd-eclipse/" property="resourcePath"/>
		<eclipse.refreshLocal resource="net.sourceforge.pmd.eclipse" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: net.sourceforge.pmd.eclipse.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip zipfile="${plugin.destination}/net.sourceforge.pmd.eclipse_2.0.2.v3.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
