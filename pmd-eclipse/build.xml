<?xml version="1.0" encoding="UTF-8"?>
<project name="net.sourceforge.pmd.eclipse" default="build.jars" basedir=".">

	<property name="bootclasspath" value=""/>
	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="true"/>
	<property name="javacSource" value="1.3"/>
	<property name="javacTarget" value="1.1"/>

	<target name="init" depends="properties">
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
		<property name="build.result.folder" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: net.sourceforge.pmd.eclipse for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<zip zipfile="${plugin.destination}/net.sourceforge.pmd.eclipse_2.0.2.v3.jar" basedir="${temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3" filesonly="false" whenempty="skip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3"/>
		<copy todir="${destination.temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3">
			<fileset dir="${build.result.folder}" includes="CHANGELOG.txt,LICENSE.txt,README.txt,RELNOTES.txt,TODO.txt,about.ini,doc.zip,icons/,lib/,log4j.dtd,log4j.xml,messages.properties,nl/,plugin.properties,plugin.xml,plugin_fr.properties,toc.xml,welcome.xml,pmd-eclipse.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/net.sourceforge.pmd.eclipse_2.0.2.v3">
			<fileset dir="${basedir}" includes="CHANGELOG.txt,LICENSE.txt,README.txt,RELNOTES.txt,TODO.txt,about.ini,doc.zip,icons/,lib/,log4j.dtd,log4j.xml,messages.properties,nl/,plugin.properties,plugin.xml,plugin_fr.properties,toc.xml,welcome.xml,pmd-eclipse.jar"			/>
		</copy>
	</target>

